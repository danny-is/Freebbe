							linkedIn
							email
							%input{:title => 'Tell us your name' } 
							password
							%input{:title => 'Tell us your name' }
							%a{:href => "#" }
			#container
				#nav
					%breadcrum
						%h1
							-@title
					%links	
						%a{:href => "/meetingRoom"} Meeting Room
