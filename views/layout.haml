		%meta{'http-equiv'=>"Content-Language", :content=>"en-us"}/
		%script{ :src => "/js/lib/jquery.js" }
		%link{:href=>"/css/grid.css", :media=>"screen", :rel=>"stylesheet", :type=>"text/css"}/
